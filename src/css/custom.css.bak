/**
 * Charte Isocarto
 * Primaire : #0f172a (gris très foncé)
 * Secondaire : #f7be16 (jaune/or)
 * Accent : #87c4d8 (bleu clair)
 */

:root {
  --iso-primary: #0f172a;
  --iso-secondary: #f7be16;
  --iso-accent: #87c4d8;

  --ifm-color-primary: var(--iso-primary);
  --ifm-color-primary-dark: #0d1117;
  --ifm-color-primary-darker: #0a0e14;
  --ifm-color-primary-darkest: #000000;
  --ifm-color-primary-light: #1f2937;
  --ifm-color-primary-lighter: #374151;
  --ifm-color-primary-lightest: #4b5563;

  --ifm-navbar-background-color: var(--iso-primary);
  --ifm-navbar-link-color: #ffffff;
  --ifm-navbar-link-hover-color: var(--iso-secondary);

  --ifm-link-color: var(--iso-primary);
  --ifm-link-hover-color: #334155;

  --ifm-menu-color-background-active: rgba(135, 196, 216, 0.1);
  --ifm-menu-color-active: var(--iso-primary);

  --ifm-background-color: #ffffff;

  --docusaurus-highlighted-code-line-bg: rgba(17, 24, 39, 0.05);
}

[data-theme="dark"] {
  --ifm-color-primary: var(--iso-secondary);
  --ifm-link-color: #ffffff;
  --ifm-link-hover-color: var(--iso-accent);

  --ifm-background-color: var(--iso-primary);
  --ifm-navbar-background-color: var(--iso-primary);

  --docusaurus-highlighted-code-line-bg: rgba(247, 190, 22, 0.1);
}

[data-theme="dark"] body,
[data-theme="dark"] .main-wrapper,
[data-theme="dark"] .navbar,
[data-theme="dark"] .footer,
[data-theme="dark"] .menu,
[data-theme="dark"] .docPage,
[data-theme="dark"] .docMainContainer,
[data-theme="dark"] .markdown,
[data-theme="dark"] .prism-code {
  background-color: #0f172a !important;
}
[data-theme="dark"] .menu__link--active {
  background-color: rgba(
    247,
    190,
    22,
    0.12
  ) !important; /* fond jaune très léger */
  color: #f7be16 !important; /* texte jaune */
  border-left: 3px solid #f7be16;
}

/* Navbar */
.navbar {
  border-bottom: 2px solid var(--iso-secondary);
}

/* Bouton de changement de thème */
.navbar .clean-btn,
.navbar button[class*="toggleButton"] {
  color: #ffffff;
}

.navbar .clean-btn:hover {
  background-color: rgba(247, 190, 22, 0.2);
}

/* Boutons CTA */
.button--primary {
  background-color: var(--iso-secondary);
  border-color: var(--iso-secondary);
  color: var(--iso-primary);
  font-weight: 600;
}

.button--primary:hover {
  background-color: #e5ad0a;
  border-color: #e5ad0a;
}

/* Sidebar : élément actif */
.menu__link--active {
  border-left: 3px solid var(--iso-accent);
  background-color: var(--ifm-menu-color-background-active);
}

/* Footer */
.footer {
  background-color: var(--iso-primary);
  color: #ffffff;
}

.footer__link-item:hover {
  color: var(--iso-secondary);
}

/* Titre de page */
h1,
h2 {
  border-bottom: 2px solid rgba(135, 196, 216, 0.3);
  padding-bottom: 0.3rem;
}
